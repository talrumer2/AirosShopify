{%- style -%}
  #Banner-{{ section.id }} {
    --banner-height: {{ section.settings.image_height }}%;
    --banner-padding: {{ section.settings.banner_padding }}px;
    --content-gap: {{ section.settings.content_gap }}px;
    
    /* Desktop Content Positioning */
    --content-horizontal-desktop: {{ section.settings.content_horizontal_alignment_desktop }};
    --content-vertical-desktop: {{ section.settings.content_vertical_alignment_desktop }};
    
    /* Mobile Content Positioning */
    --content-horizontal-mobile: {{ section.settings.content_horizontal_alignment_mobile }};
    --content-vertical-mobile: {{ section.settings.content_vertical_alignment_mobile }};
    
    /* Header Styling */
    --header-color: {{ section.settings.header_color }};
    --header-font-size: {{ section.settings.header_font_size }}px;
    --header-font-weight: {{ section.settings.header_font_weight }};
    --header-text-shadow: {{ section.settings.header_text_shadow }};
    
    /* Subheader Styling */
    --subheader-color: {{ section.settings.subheader_color }};
    --subheader-font-size: {{ section.settings.subheader_font_size }}px;
    --subheader-font-weight: {{ section.settings.subheader_font_weight }};
    --subheader-text-shadow: {{ section.settings.subheader_text_shadow }};
    --subheader-bg-color: {% if section.settings.subheader_show_bg %}{{ section.settings.subheader_bg_color | color_modify: 'alpha', section.settings.subheader_bg_opacity }}{% else %}transparent{% endif %};
    --subheader-border-radius: {{ section.settings.subheader_border_radius }}px;
    
    /* Button Styling */
    --button-bg-color: {{ section.settings.button_bg_color }};
    --button-text-color: {{ section.settings.button_text_color }};
    --button-border-radius: {{ section.settings.button_border_radius }}px;
    --button-font-size: {{ section.settings.button_font_size }}px;
    --button-font-family: {{ section.settings.button_font_family }};
    --button-font-weight: {{ section.settings.button_font_weight }};
  }
  
  .banner-wrapper {
    position: relative;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    overflow: hidden;
  }
  
  .banner-image {
    position: relative;
    width: 100%;
    overflow: hidden;
  }
  
  .banner-image img {
    width: 100%;
    height: auto;
    clip-path: inset(calc((100% - var(--banner-height)) / 2) 0);
  }
  
  .desktop-only {
    display: inline;
  }
  
  .mobile-only {
    display: none;
  }
  
  @media screen and (max-width: 749px) {
    .desktop-only {
      display: none;
    }
    
    .mobile-only {
      display: inline;
    }
  }
  
  .banner-image img {
    width: 100%;
    height: auto;
    display: block;
    clip-path: inset(calc((100% - var(--banner-height)) / 2) 0);
  }
  
  .banner-content {
    position: absolute;
    top: calc((100% - var(--banner-height)) / 2);
    left: 0;
    right: 0;
    height: var(--banner-height);
    display: flex;
    flex-direction: column;
    justify-content: var(--content-vertical-desktop);
    align-items: var(--content-horizontal-desktop);
    text-align: center;
    padding: var(--banner-padding);
    z-index: 2;
  }
  
  .banner-content__inner {
    display: flex;
    flex-direction: column;
    gap: var(--content-gap);
    max-width: 100%;
    align-items: center;
  }
  
  .banner-content__header {
    color: var(--header-color);
    font-size: var(--header-font-size);
    font-weight: var(--header-font-weight);
    text-shadow: var(--header-text-shadow);
    margin: 0;
    line-height: 1.2;
  }
  
  .banner-content__subheader {
    color: var(--subheader-color);
    font-size: var(--subheader-font-size);
    font-weight: var(--subheader-font-weight);
    text-shadow: var(--subheader-text-shadow);
    background-color: var(--subheader-bg-color);
    border-radius: var(--subheader-border-radius);
    padding: 0px 6px;
    margin: 0;
    display: inline-block;
    width: fit-content;
  }
  
  .banner-content__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }
  
  .banner-button {
    background-color: var(--button-bg-color);
    color: var(--button-text-color);
    border-radius: var(--button-border-radius);
    font-size: var(--button-font-size);
    font-family: var(--button-font-family);
    font-weight: var(--button-font-weight);
    padding: 12px 24px;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-block;
  }
  
  .banner-button:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }
  
  /* Desktop Horizontal Alignment Classes */
  .banner-content--desktop-left {
    text-align: left;
  }
  
  .banner-content--desktop-center {
    text-align: center;
  }
  
  .banner-content--desktop-right {
    text-align: right;
  }
  
  .banner-content--desktop-left .banner-content__buttons {
    justify-content: flex-start;
  }
  
  .banner-content--desktop-right .banner-content__buttons {
    justify-content: flex-end;
  }
  
  /* Mobile Responsive Adjustments */
  @media screen and (max-width: 749px) {
    #Banner-{{ section.id }} {
      --header-font-size: {{ section.settings.header_font_size | times: 0.8 }}px;
      --subheader-font-size: {{ section.settings.subheader_font_size | times: 0.9 }}px;
      --button-font-size: {{ section.settings.button_font_size | times: 0.9 }}px;
      --banner-padding: {{ section.settings.banner_padding | times: 0.7 }}px;
    }
    
    .banner-content {
      justify-content: var(--content-vertical-mobile);
      align-items: var(--content-horizontal-mobile);
    }
    
    .banner-content__buttons {
      flex-direction: column;
      align-items: center;
    }
    
    /* Mobile Horizontal Alignment Classes */
    .banner-content--mobile-left {
      text-align: left;
    }
    
    .banner-content--mobile-center {
      text-align: center;
    }
    
    .banner-content--mobile-right {
      text-align: right;
    }
    
    .banner-content--mobile-left .banner-content__buttons {
      align-items: flex-start;
    }
    
    .banner-content--mobile-center .banner-content__buttons {
      align-items: center;
    }
    
    .banner-content--mobile-right .banner-content__buttons {
      align-items: flex-end;
    }
  }
{%- endstyle -%}

<div id="Banner-{{ section.id }}" class="banner-wrapper">
  <div class="banner-image">
    {%- assign desktop_image = section.settings.image_desktop -%}
    {%- assign mobile_image = section.settings.image_mobile -%}
    {%- assign fallback_image = desktop_image | default: mobile_image -%}
    
    <picture>
      {%- if mobile_image != blank -%}
        <source 
          media="(max-width: 749px)"
          srcset="
            {%- if mobile_image.width >= 375 -%}{{ mobile_image | image_url: width: 375 }} 375w,{%- endif -%}
            {%- if mobile_image.width >= 750 -%}{{ mobile_image | image_url: width: 750 }} 750w,{%- endif -%}
            {%- if mobile_image.width >= 1100 -%}{{ mobile_image | image_url: width: 1100 }} 1100w,{%- endif -%}
            {{ mobile_image | image_url }} {{ mobile_image.width }}w
          "
          sizes="100vw"
        >
      {%- endif -%}
      
      {%- if desktop_image != blank -%}
        <source 
          media="(min-width: 750px)"
          srcset="
            {%- if desktop_image.width >= 750 -%}{{ desktop_image | image_url: width: 750 }} 750w,{%- endif -%}
            {%- if desktop_image.width >= 1100 -%}{{ desktop_image | image_url: width: 1100 }} 1100w,{%- endif -%}
            {%- if desktop_image.width >= 1500 -%}{{ desktop_image | image_url: width: 1500 }} 1500w,{%- endif -%}
            {%- if desktop_image.width >= 1780 -%}{{ desktop_image | image_url: width: 1780 }} 1780w,{%- endif -%}
            {%- if desktop_image.width >= 2000 -%}{{ desktop_image | image_url: width: 2000 }} 2000w,{%- endif -%}
            {%- if desktop_image.width >= 3000 -%}{{ desktop_image | image_url: width: 3000 }} 3000w,{%- endif -%}
            {{ desktop_image | image_url }} {{ desktop_image.width }}w
          "
          sizes="100vw"
        >
      {%- endif -%}
      
      <img
        src="{{ fallback_image | image_url: width: 1500 }}"
        loading="lazy"
        alt="{{ fallback_image.alt | escape }}"
        width="{{ fallback_image.width }}"
        height="{{ fallback_image.height }}"
      >
    </picture>
  </div>
  
  <div class="banner-content banner-content--desktop-{{ section.settings.content_horizontal_alignment_desktop | replace: 'flex-start', 'left' | replace: 'flex-end', 'right' }} banner-content--mobile-{{ section.settings.content_horizontal_alignment_mobile | replace: 'flex-start', 'left' | replace: 'flex-end', 'right' }}">
    <div class="banner-content__inner">
      {%- if section.settings.heading_desktop != blank or section.settings.heading_mobile != blank -%}
        <{{ section.settings.heading_tag }} class="banner-content__header">
          <span class="desktop-only">{{ section.settings.heading_desktop }}</span>
          <span class="mobile-only">{{ section.settings.heading_mobile }}</span>
        </{{ section.settings.heading_tag }}>
      {%- endif -%}
      
      {%- if section.settings.subheading_desktop != blank or section.settings.subheading_mobile != blank -%}
        <div class="banner-content__subheader">
          <span class="desktop-only">{{ section.settings.subheading_desktop }}</span>
          <span class="mobile-only">{{ section.settings.subheading_mobile }}</span>
        </div>
      {%- endif -%}
      
      {%- if section.settings.button_label != blank or section.settings.button_label_2 != blank -%}
        <div class="banner-content__buttons">
          {%- if section.settings.button_label != blank -%}
            <a
              {% if section.settings.button_link == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ section.settings.button_link }}"
              {% endif %}
              class="banner-button"
            >
              {{ section.settings.button_label | escape }}
            </a>
          {%- endif -%}
          
          {%- if section.settings.button_label_2 != blank -%}
            <a
              {% if section.settings.button_link_2 == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ section.settings.button_link_2 }}"
              {% endif %}
              class="banner-button"
            >
              {{ section.settings.button_label_2 | escape }}
            </a>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

